set default-bg                  "#1c1c1c"
set default-fg                  "#262626"

set statusbar-fg                "#ffffff"
set statusbar-bg                "#1c1c1c"

set inputbar-bg                 "#1c1c1c"
set inputbar-fg                 "#FFFFFF"

set notification-bg             "#1c1c1c"
set notification-fg             "#FFFFFF"

set notification-error-bg       "#1c1c1c"
set notification-error-fg       "#FFFFFF"

set notification-warning-bg     "#1c1c1c"
set notification-warning-fg     "#FFFFFF"

set highlight-color             "#7CAEEB"
set highlight-active-color      "#EBCB8B"

set completion-bg               "#262626"
set completion-fg               "#EBCB8B"

set completion-highlight-fg     "#8FBCBB"
set completion-highlight-bg     "#EBCB8B"

set recolor-lightcolor          "#1c1c1c"
set recolor-darkcolor           "#FFFFFF"

set recolor                     "false"
set recolor-keephue             "false"

#+-----------------------------------------------+#

#Toggle dark mode
map <C-i> recolor

#map f to fullscreen
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# Open document in fit-width mode by default
set adjust-open "best-fit"

#smooth scrolling placebo
set scroll-step 100

#copy selection to clipboard
set selection-clipboard clipboard

#enable scrollbar
set show-scrollbars "true"
